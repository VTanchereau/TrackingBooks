<Page x:Class="GestionnaireBibliotheque.BookLayout"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestionnaireBibliotheque"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="BookLayout">

    <Grid>

        <StackPanel>
            <StackPanel Background="#FF656565">
                    <TextBlock Name="bookTitle" Text="Book Title" FontWeight="Bold" FontSize="12" Margin="10,5,0,0"/>
                    <StackPanel Margin="10,0,0,5" Orientation="Horizontal">
                        <TextBlock Name="textBlock1" Text="Ecrit par " FontWeight="Bold" FontSize="7"/>
                        <TextBlock Name="bookAuthor" Text="Author" FontWeight="Bold" FontSize="7"/>
                    </StackPanel>
            </StackPanel>

            <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="#FFC8C5C5">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="#FFED0B0B" Height="60" Width="60" Margin="10,10,0,0"/>
                    <StackPanel>
                        <StackPanel HorizontalAlignment="Right" Margin="10,10,0,10" Orientation="Horizontal">
                            <TextBlock Text="Ajouté le " FontSize="7"/>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
